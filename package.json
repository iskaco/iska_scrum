{
  "name": "iska-scrum",
  "version": "1.0.0",
  "description": "A simple and user-friendly Scrum project management application built with Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "scrum",
    "project-management",
    "task-management"
  ],
  "author": "IskaCo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "mysql2": "^3.11.3",
    "pg": "^8.12.0",
    "sqlite3": "^5.1.7"
  },
  "overrides": {
    "rimraf": "^5.0.5",
    "glob": "^10.3.10",
    "npmlog": "^7.0.1",
    "are-we-there-yet": "^4.0.2",
    "gauge": "^5.0.2",
    "@npmcli/move-file": "^2.0.1",
    "node-gyp": "^10.2.0",
    "make-fetch-happen": "^13.0.0",
    "cacache": "^18.0.3"
  },
  "build": {
    "appId": "com.iskaco.scrum",
    "productName": "Iska Scrum",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
